<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form action="/courses/{{course._id}}?_method=PUT" method="post">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Tên khóa học</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Tên khóa học"
        value="{{course.name}}"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Mô tả khóa học</label>
      <textarea
        class="form-control"
        name="description"
        id=""
        cols="30"
        rows="4"
      >{{course.description}}</textarea>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Video ID</label>
      <input
        name="videoId"
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        placeholder="Video ID"
        value="{{course.videoId}}"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Trình độ</label>
      <input
        name="level"
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        placeholder="Trình độ"
        value="{{course.level}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>